<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:left="0dp" android:right="10dp" android:top="0dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#802A6F7C"/> <!-- Semi-transparent shadow -->
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Main box -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F4F4F4" /> <!-- Light gray/white box -->
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>
