<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Biru sebagai border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="18dp" android:topRightRadius="18dp"/>
        </shape>
    </item>

    <!-- Isi di dalam border -->
    <item android:left="6dp" android:top="6dp" android:right="15dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="18dp" android:bottomLeftRadius="18dp"  android:bottomRightRadius="18dp" android:topRightRadius="18dp"/>
        </shape>
    </item>
</layer-list>