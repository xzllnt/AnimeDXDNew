<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Biru sebagai border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3B667C" />
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp" />
        </shape>
    </item>

    <!-- Isi di dalam border -->
    <item android:left="6dp" android:top="6dp" android:right="8dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#A9BDC1" />
            <corners android:topLeftRadius="18dp" android:bottomLeftRadius="18dp" />
        </shape>
    </item>
</layer-list>